<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines = "20"
        android:scrollbars = "vertical"
        android:orientation="vertical">
        <Button
            android:text="HttpDownload"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="httpdownload_test"
        />

        <Button
            android:text="HttpUpload"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="httpupload_test"
            />
        <Button
            android:text="HttpsDownload"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="httpsdownload_test"
            />
        <Button
            android:text="HttpsUpload"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="httpsupload_test"
            />
    </LinearLayout>
        <TextView
            android:id="@+id/myTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
</LinearLayout>